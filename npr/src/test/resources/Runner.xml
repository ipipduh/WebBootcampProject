<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Selenium Test Suite" parallel="false">

    <!---if you want to use cloud & mac, use OS X as the value,
   for local use mac or windows-->

    <parameter name="platform" value="windows"/>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="https://www.npr.org/"/>

    <parameter name="cloud" value="false"/>
    <parameter name="envName" value="browsertstack"/>
    <parameter name="browserVersion" value="latest"/>


    <test name="Automation tests">
        <classes>
            <class name="com.nprtest.HomePageValidations"/>
            <class name="com.nprtest.UserHomePageValidations"/>
            <class name="com.nprtest.SignInPageValidations"/>
            <class name="com.nprtest.SignOutPageValidations"/>
        </classes>
    </test>
</suite>